<div class="card">
  <div class="card-header">

<%= form_with(model: category, url: categories_path, local: true, html: { multipart: true }) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: 'Enter name here' %>
  </div>

  <div class="field form-group">
  <%= form.label :icon, style: "display: block" %>
  <%= form.file_field :icon, direct_upload: true %>
</div>


  <div class="field form-group">
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit "Create Category" %>
  </div>
<% end %>
</div>
<%= link_to "Back to categories", categories_path %>
</div>