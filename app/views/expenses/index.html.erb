<p style="color: green"><%= notice %></p>

<div class="container">

  <% @categories.each do |category| %>
    <div class="col expe">
    <h3>Total Amount: <%= number_to_currency(category.expenses.sum(:amount), unit: '$') %></h3>
    </div>
    <div class="row category-total">
   
      <div class="col expense">
      <% category.expenses.each do |expense| %>
        <%= render expense %>
       
        </div>
        <div class="col expense">
          <%= link_to "Show this expense", expense %>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to "New expense", new_expense_path %> </br>
<%= link_to "Back", categories_path %>
</div>


